@{Layout = "_LayoutLogin";
	@model Impulse.Model.PDF_
}

<h4>PDF_</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PDF_template">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                
                <span asp-validation-for="Name" class="text-danger">@Model.Name</span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">Address</label>
              
                <span asp-validation-for="Address" class="text-danger">@Model.Address</span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">Amount</label>
             
                <span asp-validation-for="Amount" class="text-danger">@Model.Amount</span>
            </div>
            
        </form>
    </div>
</div>



